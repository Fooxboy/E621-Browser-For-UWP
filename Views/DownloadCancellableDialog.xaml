<UserControl
    x:Class="E621Downloader.Views.DownloadCancellableDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:E621Downloader.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
	d:RequestedTheme="Dark"
    d:DesignHeight="100"
    d:DesignWidth="250">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="MainText" Text="Downloading"/>
		<Button x:Name="CancelButton" Grid.Row="1" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Click="CancelButton_Click">
			<StackPanel Orientation="Horizontal">
				<FontIcon Glyph="&#xE711;" VerticalAlignment="Center" Margin="5"/>
				<TextBlock Text="Cancel" VerticalAlignment="Center" Margin="5"/>
			</StackPanel>
		</Button>
	</Grid>
</UserControl>
