<UserControl
	x:Class="E621Downloader.Views.LoadingDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:E621Downloader.Views"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:controls="using:Microsoft.UI.Xaml.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:RequestedTheme="Dark"
	d:Height="200"
	d:Width="300">

	<Grid>
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch">
			<TextBlock x:Name="ContentDialog" d:Text="Content" Margin="5" FontSize="18" TextAlignment="Center"/>
			<controls:ProgressBar IsIndeterminate="True" Margin="5"/>
		</StackPanel>
	</Grid>
</UserControl>
