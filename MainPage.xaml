<Page
    x:Class="E621Downloader.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:E621Downloader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:data="using:E621Downloader.Models" 
	xmlns:contrl="using:Microsoft.UI.Xaml.Controls"
	mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
	<Grid>
		<NavigationView PaneDisplayMode="Top" x:Name="MyNavigationView" IsBackButtonVisible="Auto" SelectionFollowsFocus="Enabled" ItemInvoked="MyNavigationView_ItemInvoked">
			<NavigationView.MenuItems>
				<NavigationViewItem Icon="Home" Content="Home" Tag="0"/>
				<NavigationViewItem Icon="Pictures" Content="Picture" Tag="1"/>
				<NavigationViewItem Icon="Library" Content="Library" Tag="2"/>
				<NavigationViewItem Icon="Link" Content="Subcription" Tag="3"/>
				<NavigationViewItem Content="Spot" Tag="4">
					<NavigationViewItem.Icon>
						<FontIcon Glyph="&#xF272;"/>
					</NavigationViewItem.Icon>
				</NavigationViewItem>
				<NavigationViewItem Icon="Download" Content="Downloads" Tag="5"/>
			</NavigationView.MenuItems>
			<NavigationView.PaneFooter>
				<StackPanel Orientation="Horizontal">
					<Button x:Name="CurrentTagsButton" VerticalAlignment="Center" Height="40" Background="Transparent" BorderThickness="0" Tapped="CurrentTagsButton_Tapped">
						<Button.Content>
							<StackPanel Orientation="Horizontal">
								<TextBlock x:Name="TextBlockSearchTags" Text="E621_Tags" Margin="5,0,5,0"/>
								<FontIcon Glyph="&#xE094;" FontSize="16" Margin="5,0,5,0"/>
							</StackPanel>
						</Button.Content>
					</Button>
					<Button x:Name="FullScreenButton" Background="Transparent" BorderThickness="0" Height="40" Width="45" FontFamily="Segoe MDL2 Assets" Content="&#xE740;" Tapped="FullScreenButton_Tapped"  ToolTipService.ToolTip="Switch FullScreen"/>
				</StackPanel>
			</NavigationView.PaneFooter>
			<NavigationView.Content>
				<Frame x:Name="MyFrame">
					<Frame.ContentTransitions>
						<TransitionCollection>
							<NavigationThemeTransition/>
						</TransitionCollection>
					</Frame.ContentTransitions>
				</Frame>
			</NavigationView.Content>
		</NavigationView>
	</Grid>
</Page>
