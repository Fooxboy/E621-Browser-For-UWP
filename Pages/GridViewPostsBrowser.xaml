<Page
    x:Class="E621Downloader.Pages.GridViewPostsBrowser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:E621Downloader.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data ="using:E621Downloader.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<GridView x:Name="MyGridView" ItemsSource="{x:Bind articles}">
		<GridView.ItemTemplate>
			<DataTemplate x:DataType="data:E621Article">
				<Image Source="{x:Bind url_preview}" Height="200"  Stretch="Uniform" ImageOpened="Image_ImageOpened"/>
			</DataTemplate>
		</GridView.ItemTemplate>
	</GridView>
</Page>
